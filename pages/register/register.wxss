/* pages/login/login.wxss */
page {
	height: 100%;
	/* 使用page的height可以使页面占全屏 */
	background-color: #faf0f3;
}

.login-container {
	padding: 0 10%;
	height: 100%;
}

.title {
	font-size: large;
	text-align: center;
	padding-top: 10%;
	font-weight: bold;
}

.login-box {
	margin-top: 5%;
	padding: 5% 5%;
	background-color: white;
	border-radius: 10px;
	box-shadow: 0 4px 4px #888888;
	border: solid 0.15rem #ffaaff;
}

.login-box>input {
	margin: 2% 0 5% 0;
	border-bottom: 1rpx solid lightgray;
}

.login-btn {
	width: 100% !important;
	background-color: #2f6afd;
	color: white;
	font-weight: normal;
}

.three-line {
	margin: 4% 0;
	text-align: center;
	font-size: 12px;
	color: gray;
}

.btn-foot {
	display: flex;
}

.btn-foot button {
	width: 6.25rem;
}

.register-btn,
.register-reset {
	margin-top: 1.25rem;
	color: white;
	background-color: #cd5bfd;
}

.register-reset {
	background-color: #ff5500;
}
